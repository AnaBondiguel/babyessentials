<div class="col-sm-6">
<%#  users search for item %>
<br><br>
  <h2>Search Results</h2> 
  <table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Picture</th>
      <th>Description</th>
      <th>Price</th>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
      <% @listings.each do |listing| %>
      <tr>
        <td><%= listing.title %></td>
        <td><% if listing.picture.attached? %>
                 <%= image_tag listing.picture, class:"image1"%>
            <% else %> 
                 <%= image_tag "baby2.jpg", class: "image1" %> 
            <% end %>
        </td>
        <td><%= listing.description %></td>
        <td><h4><%= number_to_currency(listing.price) %></h4></td> 
        <td> <%= link_to "Show More", listing_path(listing.id), class:"btn btn-primary btn-right" %></td>
      </tr>
      <% end %>
    </tbody>
</table>
</div>
