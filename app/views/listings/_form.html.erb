<%= simple_form_for(@listing) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :description, as: :rich_text_area%>
    <%= f.input :condition, as: :radio_buttons, collection: [['1', 'very used condition'], ['2', 'good used condition'], ['3', 'used once'], ['4', 'brand new']], label_method: :second, value_method: :first %>
    <%= f.input :price %>
    <%= f.input :category_id, collection: ['Nursery Furniture and Decor', 'Prams, Strollers and Accessories', 'Car Seats', 'Playtime and Learning', 'Sleepingwear and Bedding', 'Bathing', 'Feeding', 'Clothing', 'Others'] %>
    <%=f.file_field :picture %>
   
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
